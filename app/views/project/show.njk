{% extends "layout/application.njk" %}

{% block link %}

{% endblock %}

{% block body %}
	<div class="container main">
		<a class="btn btn-warning pull-right" href="/projects">返回</a>
		<a class="btn btn-success" href="/projects/{{ project._id }}/apis/new">新建api</a>
		<a class="btn btn-primary" href="/projects/{{ project._id }}/apis">api列表</a>
		<a class="btn btn-primary" href="/projects/{{ project._id }}/records">请求记录</a><br /><br />
		<form method="post" action="/projects/{{ project._id }}/run">
			<input type="hidden" name="_csrf" value="{{ csrf }}" />
		  <button type="submit" class="btn btn-default">请求所有api</button>
		</form>
		<br /><br />
		<div class="panel panel-primary">
			<div class="panel-heading">{{ project.name }}</div>
				<div class="list-group">
					<a href="#" class="list-group-item">
						<h4 class="list-group-item-heading">项目名称</h4>
						<p class="list-group-item-text">{{ project.name }}</p>
					</a>
				</div>
				<div class="list-group">
					<a href="#" class="list-group-item">
						<h4 class="list-group-item-heading">项目描述</h4>
						<p class="list-group-item-text">{{ project.desc }}</p>
					</a>
				</div>
				<div class="list-group">
					<a href="#" class="list-group-item">
						<h4 class="list-group-item-heading">api个数</h4>
						<p class="list-group-item-text">{{ project.apiCount }}</p>
					</a>
				</div>
				<div class="list-group">
					<a href="#" class="list-group-item">
						<h4 class="list-group-item-heading">创建时间</h4>
						<p class="list-group-item-text">{{ viewHelper.time.formatTime(project.created_at) }}</p>
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block script %}

{% endblock %}
